pipeline {
    agent any

    triggers {
        // Backup para rodar a cada 5 minutos caso webhook falhe
        pollSCM('H/5 * * * *')
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/SEU_USUARIO/SEU_REPO.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("cypress-tests")
                }
            }
        }

        stage('Run Cypress Tests') {
            steps {
                script {
                    docker.image("cypress-tests").inside {
                        sh 'npm test'
                    }
                }
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'cypress/videos/**/*.*, cypress/screenshots/**/*.*', allowEmptyArchive: true
            junit 'cypress/results/*.xml'
        }
    }
}
